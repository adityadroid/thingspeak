<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="170dp"
    android:layout_height="200dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp">

    <RelativeLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="35dp"
        android:id="@+id/upperContentLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Heading"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="6dp"
            android:layout_alignParentBottom="true"
         />
        <TextView
            android:id="@+id/item_channel_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="this is details of the channel"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="8dp"
            android:layout_alignParentBottom="true"
         />
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="1"
                android:paddingRight="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_channel_val1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="value 1"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/item_channel_val2"
                    android:layout_width="match_parent"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="value 2"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingRight="4dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_channel_val3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="value 1"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/item_channel_val4"
                    android:layout_width="match_parent"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="value 2"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="4dp"
                android:layout_weight=".5"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorAccent"
                android:text="EDIT"
                android:id="@+id/item_channel_edit_bt"
                android:textAlignment="center"
                android:textSize="15sp"
                />
            <TextView
                android:padding="4dp"
                android:textAlignment="center"
                android:layout_weight=".5"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="30dp"
                android:text="DELETE"
                android:id="@+id/item_channel_delete_bt"
                android:textSize="15sp"

                />

        </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>